---
import Filters from './Filters.astro';
import SubscribeForm from '../components/SubscribeForm.astro';

const { footerSubscribe } = Astro.props;
---
<div class="text-sm py-8 container">
  {footerSubscribe && (
    <div class="py-4 flex flex-col gap-2">
      <p>Subscribe to my newsletter:</p>
      <SubscribeForm />
    </div>
  )}
	<p class="pb-2">Find me on:</p>
  <ul class="flex flex-col list-none gap-2">
    <li class="text-sm underline"><a href="https://bluesky.social/@jonnyburch">Bluesky</a></li>
    <li class="text-sm underline"><a href="https://www.linkedin.com/in/jonnyburch/">Linkedin</a></li>
    <li class="text-sm underline"><a href="https://github.com/jonnyburch">Github</a></li>
    <li class="text-sm underline"><a href="mailto:jonny@jonnyburch.com">jonny@jonnyburch.com</a></li>
  </ul>
  <p class="pt-16 opacity-75">© 2011-{new Date().getFullYear()} Jonny Burch  ·  <a href="/feed.xml">RSS</a></p>
</div>
<div class="absolute bottom-0 right-0">
  <Filters />
</div>
